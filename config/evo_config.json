{
  "trading": {
    "symbol": "SPY",
    "trade_qty": 1,
    "use_simulation": true,
    "sim_speed": 0.8
  },
  "data": {
    "data_path": "preprocessed_training_data.csv",
    "seq_len": 15,
    "features": [
      "open", "high", "low", "close", "volume",
      "return", "volatility", "sma_5", "sma_20", "rsi", "macd"
    ]
  },
  "training": {
    "model_dir": "trained_models",
    "model_name": "ppo_trading_agent.zip",
    "training_steps": 1000000,
    "learning_rate": 0.0003,
    "clip_range": 0.2,
    "batch_size": 64,
    "entropy_coef_init": 0.1,
    "entropy_coef_final": 0.01,
    "gae_lambda": 0.95,
    "gamma": 0.95
  },
  "reward": {
    "tp_pct": 0.01,
    "sl_pct": 0.01,
    "idle_penalty": 0.0003,
    "sl_penalty_coef": 10.0,
    "tp_reward_coef": 15.0,
    "timeout_duration": 3,
    "timeout_reward_coef": 2.0,
    "ongoing_reward_coef": 0.2,
    "reward_clip_range": [-1.0, 1.0],
    "max_episode_steps": 5000
  },
  "optimization": {
    "mutation_rate": 0.1,
    "elite_proportion": 0.2,
    "num_backtests": 500,
    "backtest_length": 360
  },
  "alpaca": {
    "paper_trading": true
  }
} 